@model PolovniAutomobiliMVC.ViewModels.ShoppingCartViewModel

<h2>Your shopping cart</h2>
<h4>The high quality cars are in your shopping cart!</h4>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected amount</th>
            <th>Car</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.shoppingCart.shoppingCartItems)
        {
            <tr>
                <td class="text-center">@item.amount</td>
                <td class="text-left">@item.car.name</td>
                <td class="text-right">@item.car.price.ToString("c")</td>
                <td class="text-right">@((item.amount * item.car.price).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.totalPrice.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>
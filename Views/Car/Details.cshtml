@model Car

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="card">
        <div class="card-header">
            <img src="@Model.imageUrlThumbnail" alt="" class="img-thumbnail">
        </div>
        <div class="card-body">
            <h3>
                <a asp-controller="Car" asp-action="Details" asp-route-id="@Model.id">@Model.name</a>
            </h3>
            <h3 class="pull-right">@Model.price.ToString("c")</h3>
            <p>@Model.descriptionShort</p>
        </div>
        <div class="card-footer">
            <p class="button">
                <a class="btn btn-primary"
                    asp-controller="ShoppingCart"
                    asp-action="AddToShoppingCart"
                    asp-route-carId="@Model.id">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>